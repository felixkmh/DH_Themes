                                <Condition Property="VerticalAlignment" Value="{x:Static VerticalAlignment.Bottom}" SourceName="LogoBorder"/>
                                <Condition Property="IsVisible" Value="True" SourceName="ExtraMetadataLoader_LogoLoaderControl"/>
