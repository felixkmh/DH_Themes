                                                         To="1" 
                                                         Storyboard.TargetProperty="(ScaleTransform.ScaleX)" 
                                                         Storyboard.TargetName="PlayExtButtonScale">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation BeginTime="0:0:0.5" Duration="0:0:0.1" 
                                                         To="0" 
                                                         Storyboard.TargetProperty="(ScaleTransform.ScaleX)" 
                                                         Storyboard.TargetName="PlayExtButtonScale"
                                                         >
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseIn"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
