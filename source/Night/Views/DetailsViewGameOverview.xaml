                                                                                        </ControlTemplate.Triggers>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </ContentControl.Resources>
                                                                </ContentControl>
                                                            </Border>
                                                        </Border>
